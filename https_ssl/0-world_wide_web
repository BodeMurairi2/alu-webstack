#!/usr/bin/env bash
# Script to audit subdomains and return full sentence format

# Function to get info for a single subdomain
get_subdomain_info() {
    local domain=$1
    local sub=$2
    local fqdn="${sub}.${domain}"

    # Get IP address and record type
    local dig_result=$(dig "$fqdn" +short | head -n1)
    local record_type=$(dig "$fqdn" | grep -A1 "ANSWER SECTION:" | tail -n1 | awk '{print $4}')

    # Output only if result found
    if [[ -n "$dig_result" && -n "$record_type" ]]; then
        echo "The subdomain $sub is a $record_type record and points to $dig_result"
    fi
}

# Input arguments
domain="$1"
subdomain="$2"

# Ensure domain is provided
if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

# If subdomain is passed
if [[ -n "$subdomain" ]]; then
    get_subdomain_info "$domain" "$subdomain"
else
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info "$domain" "$sub"
    done
fi
