#!/usr/bin/env bash
# Script to display DNS information about subdomains

# Function to get DNS record info
get_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"

    # Get DNS record
    local record=$(dig $full_domain +short)

    # Get record type
    local record_type=$(dig $full_domain | grep -A1 "ANSWER SECTION:" | tail -n1 | awk '{print $4}')

    # Use awk to format output (avoid reserved word "sub")
    echo "$record" | awk -v sub_name="$subdomain" -v type="$record_type" '
    {
        printf "The subdomain %s is a %s record and points to %s\n", sub_name, type, $1
    }'
}

# Main logic
domain=$1
subdomain=$2

# Check if domain param is missing
if [ -z "$domain" ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

if [ -z "$subdomain" ]; then
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info "$domain" "$sub"
    done
else
    get_subdomain_info "$domain" "$subdomain"
fi
