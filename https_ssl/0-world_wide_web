#!/usr/bin/env bash
# Script to display DNS info for subdomains of a domain

# Function to get subdomain IP
get_subdomain_ip() {
    local domain=$1
    local sub=$2
    local full_domain="${sub}.${domain}"

    # Use dig to get record and parse with awk
    dig "$full_domain" +short | awk -v subdomain="$sub" -v mode="$3" '
    NR == 1 {
        if (mode == "full") {
            printf "The subdomain %s is a A record and points to %s\n", subdomain, $1
        } else {
            print $1
        }
    }'
}

# Main logic
domain=$1
subdomain=$2

if [ -z "$domain" ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

if [ -z "$subdomain" ]; then
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_ip "$domain" "$sub" "full"
    done
else
    get_subdomain_ip "$domain" "$subdomain" "ip_only"
fi
