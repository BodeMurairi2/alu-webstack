#!/usr/bin/env bash
# Script to display DNS info for subdomains

# Function to get subdomain info
get_subdomain_info() {
    local domain=$1
    local sub=$2
    local mode=$3
    local fqdn="${sub}.${domain}"

    local ip=$(dig "$fqdn" +short | head -n1)
    local record_type=$(dig "$fqdn" | grep -A1 "ANSWER SECTION:" | tail -n1 | awk '{print $4}')

    if [[ -n "$ip" ]]; then
        if [[ "$mode" == "single" ]]; then
            echo "$ip"
        else
            echo "The subdomain $sub is a $record_type record and points to $ip"
        fi
    fi
}

# Main
domain="$1"
subdomain="$2"

if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

if [[ -z "$subdomain" ]]; then
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info "$domain" "$sub" "full"
    done
else
    get_subdomain_info "$domain" "$subdomain" "single"
fi
